{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
      "config:best-practices",
      "schedule:nonOfficeHours",
      ":gitSignOff"
    ],
    "constraints": {
      "go": "1.24"
    },
    "internalChecksFilter": "strict",
    "minimumReleaseAge": "3 days",
    "postUpdateOptions": [
      "gomodTidy"
    ],
    "pre-commit": {
      "enabled": true
    },
    "timezone": "Europe/London",
    "vulnerabilityAlerts": {
      "labels": ["security"],
      "assignees": ["@ramirezj"]
    }
  }
